.btn-primary:disabled {
  background-color: #adb5bd;
  cursor: not-allowed;
}

/* Secondary Button */
.btn-secondary {
  background-color: transparent;
  color: #18b4ad;
  padding: 12px 24px;
  border: 2px solid #18b4ad;
  border-radius: 8px;
  font-weight: 500;
  font-size: 1rem;
  transition: all 200ms ease-out;
  cursor: pointer;
}

.btn-secondary:hover {
  background-color: #e0f7f5;
}

